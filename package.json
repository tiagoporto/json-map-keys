{
  "name": "json-map-keys",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "postinstall": "$CI = true || (dependabot-config && editor-config)",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "checks": "npm run format:check && npm run lint",
    "format": "npm run format:check -- --write",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "test:mutation": "stryker run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@stryker-mutator/vitest-runner": "^9.1.1",
    "@tiagoporto/dependabot-config": "^2.4.0",
    "@tiagoporto/editor-config": "^2.0.0",
    "@tiagoporto/eslint-config": "^5.3.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.10",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "vitest": "^3.2.4"
  }
}
