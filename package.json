{
  "name": "json-map-keys",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "postinstall": "$CI = true || (dependabot-config && editor-config)",
    "lint": "",
    "check-links": "remark --frail --use validate-links .",
    "check-urls": "remark --frail --use remark-lint-no-dead-urls .",
    "checks": "npm run format:check",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "npm run format:check -- --write",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "test:mutation": "stryker run",
    "test:mutation-report": "stryker run --reporters dashboard"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/javascript-mutator": "^4.0.0",
    "@stryker-mutator/jest-runner": "^9.1.1",
    "@tiagoporto/dependabot-config": "^2.0.0",
    "@tiagoporto/editor-config": "^2.0.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "remark-cli": "^9.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-validate-links": "^10.0.2",
    "vitest": "^3.2.4"
  }
}
